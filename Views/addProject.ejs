<%- include('partials/navbar', { page: '/solutions/addProject' }) %>

<div class="container" style="max-width: 100%; padding: 20px;">
    <div style="text-align: center; margin-bottom: 25px;">
        <h4>Add a new Project to the collection</h4>
    </div>

    <form action="/solutions/addProject" method="POST">
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
            <div>
                <label style="display: block; margin-bottom: 8px;">Title</label>
                <input type="text" id="title" name="title" required style="width: 100%; padding: 8px;">
            </div>

            <div>
                <label style="display: block; margin-bottom: 8px;">Feature Image URL</label>
                <input type="url" id="feature_img_url" name="feature_img_url" required style="width: 100%; padding: 8px;">
            </div>

            <div>
                <label style="display: block; margin-bottom: 8px;">Sector</label>
                <select id="sector_id" name="sector_id" required style="width: 100%; padding: 8px;">
                    <option value="">-- Select a Sector --</option>
                    <% sectors.forEach(sector => { %>
                        <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
            <div>
                <label style="display: block; margin-bottom: 8px;">Intro</label>
                <textarea id="intro_short" name="intro_short" rows="6" required style="width: 100%; padding: 8px; resize: vertical;"></textarea>
            </div>

            <div>
                <label style="display: block; margin-bottom: 8px;">Short Summary</label>
                <textarea id="summary_short" name="summary_short" rows="6" required style="width: 100%; padding: 8px; resize: vertical;"></textarea>
            </div>

            <div>
                <label style="display: block; margin-bottom: 8px;">Impact</label>
                <textarea id="impact" name="impact" rows="6" required style="width: 100%; padding: 8px; resize: vertical;"></textarea>
            </div>
        </div>
        <div style="margin-bottom: 30px;">
            <label style="display: block; margin-bottom: 8px;">Original Source URL</label>
            <input type="url" id="original_source_url" name="original_source_url" required style="width: 100%; padding: 8px;">
        </div>
        <div style="display: flex; justify-content: space-between;">
            <a href="/solutions/projects" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>