<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body class="bg-gray-900 text-white">
    <%- include('partials/navbar', { page: '/' }) %>

    <main class="container mx-auto my-8">
        <section class="bg-base-200 p-10 rounded-lg text-left relative" style="text-align: center;">
            <div class="max-w-xl">
                <h1 class="text-4xl font-bold mb-2">Explore Our Climate Solutions</h1>
                <p class="text-lg mb-6">Discover projects that help combat climate change.</p>
            </div>
            <a href="/solutions/projects" class="btn btn-primary absolute bottom-4 right-4">View Projects</a>
        </section>

        <section class="grid grid-cols-1 md:grid-cols-3 gap-6 my-6">
            <% projects.forEach(project => { %>
            <div class="card bg-gray-800 p-4 shadow-lg">
                <img src="<%= project.feature_img_url %>" class="w-full rounded">
                <h2 class="text-xl font-semibold mt-2"><%= project.title %></h2>
                <p><%= project.summary_short %></p>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-green mt-4">More Information</a>
            </div>
            <% }); %>
        </section>
    </main>
</body>
</html>