<%- include('partials/navbar', { page: '' }) %>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Edit Project: <%= project.title %></h2>

        <form action="/solutions/editProject/<%= project.id %>" method="POST">
            <input type="hidden" name="id" value="<%= project.id %>">

            <div class="mb-3">
                <label for="title" class="form-label">Project Title:</label>
                <input type="text" class="form-control" name="title" value="<%= project.title %>" required>
            </div>

            <div class="mb-3">
                <label for="feature_img_url" class="form-label">Feature Image URL:</label>
                <input type="url" class="form-control" name="feature_img_url" value="<%= project.feature_img_url %>" required>
            </div>

            <div class="mb-3">
                <label for="sector_id" class="form-label">Sector:</label>
                <select class="form-select" name="sector_id" required>
                    <% sectors.forEach(sector => { %>
                        <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                            <%= sector.sector_name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-3">
                <label for="intro_short" class="form-label">Intro Short:</label>
                <textarea class="form-control" name="intro_short" rows="2" required><%= project.intro_short %></textarea>
            </div>

            <div class="mb-3">
                <label for="summary_short" class="form-label">Summary Short:</label>
                <textarea class="form-control" name="summary_short" rows="3" required><%= project.summary_short %></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/solutions/deleteProject/<%= project.id %>" 
                    class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to delete this project?');">
                    Delete Project
                 </a>
                 
                <button type="submit" class="btn btn-primary">Update Project</button>
            </div>
        </form>
    </div>
</div>
